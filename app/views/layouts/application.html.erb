<!DOCTYPE html>
<html>
  <head>
    <%= render "head" %>
  </head>

  <body>
    <% if flash.any? %>
      <div class="alerts">
        <% flash.each do |type, message| %>
          <div class="alert <%= "alert-#{type}" %>">
            <%= message %>
          </div>
        <% end %>
      </div>
    <% end %>

    <%= yield %>

    <template id="drawer-template">
      <%= render DrawerFrameComponent.new %>
    </template>
  </body>
</html>
